include ../mixins/sub-menu.pug
header.header 
  .container 
    .row.align-items-center 
      .col-1
        .inner-logo 
          a(href="#")
            img(src=setting.logo, alt="logo")
      
      .col-4 
        form(
          action="/search"
          method="GET"
        )
          div(class="form-group d-flex mb-0")
            input(
              type="text"
              placeholder="Nhập từ khóa..."
              class="form-control"
              name="keyword"
            )
            button(
              type="submit"
              class="btn btn-primary"
            ) Tìm
      .col-7
        .inner-menu
          ul 
            li 
              a(href="/") Trang chủ
            li(class="sub-menu")
              -const pathProduct = "/products"
              a(href="/products") Sản phẩm
              +sub-menu(Categories,pathProduct)
            li 
              a(href="/cart") Giỏ hàng (#{miniCart ? miniCart.toltalQuantity : 0})
            if(user)
              li 
                a(href="/chat") Chat
              li 
                a(href="/user/info") #{user.fullName}
              li 
                a(href="/user/logout") Đăng xuất
            else 
              li 
                a(href="/user/register") Đăng ký
              li 
                a(href="/user/login") Đăng nhập
            li 
              button(
                class="btn btn-secondary"
                back-button
              ) Trở lại
            
              