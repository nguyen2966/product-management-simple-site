extends ../../layouts/default.pug

block main 
  .container.my-3 
    .row 
      .col-12  
        if (product.title)
          h1.mb-4 #{product.title}
        
        if (product.price)
          div.mb-4 Giá: <b>#{product.price} ₫</b>
        
        if (product.discountPercentage)
          div.mb-4 Giảm giá: <b>#{product.discountPercentage}%</b> 
        
        if (product.stock)
          div.mb-4 Còn lại: <b>#{product.stock}</b>
        
        if (product.thumbnail)
          div.mb-4
            img(src=product.thumbnail class="img-thumbnail" style="width:150px")
        
        if (product.status)
          div.mb-4
            span Trạng thái:
            if (product.status == 'active')
              span Đang kinh doanh
            else 
              span Ngừng kinh doanh
            