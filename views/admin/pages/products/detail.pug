extends ../../layouts/default.pug

block main 
  if (product)
    if (product.title)
      h1.mb-4 #{product.title}
    
    if (product.price)
      div.mb-4 Giá: <b>#{product.price} ₫</b>
    
    if (product.discountPercentage)
      div.mb-4 Giảm giá: <b>#{product.discountPercentage}%</b> 
    
    if (product.stock)
      div.mb-4 Còn lại: <b>#{product.stock}</b>
    
    if (product.thumbnail)
      div.mb-4
        img(src=product.thumbnail class="img-thumbnail" style="width:150px")
    
    if (product.status)
      div.mb-4
        span Trạng thái:
        if (product.status === 'active')
          span(class="badge badge-success") Đang kinh doanh
        else 
          span(class="badge badge-danger") Đang kinh doanh
    a(
     href=`${prefixAdmin}/products/edit/${product.id}`
     class="btn btn-warning" ) Chỉnh sửa

   
  else 
    h2.text-danger Không tìm thấy sản phẩm!

  script(src="/admin/js/product.js")
