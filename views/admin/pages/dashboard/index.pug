extends ../../layouts/default.pug

block main
  h1 #{pageTitle}
  .row.mt-4 
    .col-12 
      .card.mb-4 
        .card-header Thông tin tài khoản 
        .card-body 
          if(user.avatar)
            img(
              src=user.avatar 
              style="height:100px;margin-bottom:15px"
            )
          if(user.fullName)
            p Họ tên: <b>#{user.fullName}</b>
          if(user.email)
            p Email: <b>#{user.email}</b>
          if(user.phone)
            p Số điện thoại: <b>#{user.phone}</b>
          if(role.title)
            p Phân quyền : <b>#{role.title}</b>
    each item in statistic
      .col-6 
        .card.mb-4 
          .card-header #{item.title}
          .card-body 
            p Số lượng: <b>#{item.total}</b>
            p Hoạt động: <b>#{item.active}</b>
            p Ngừng hoạt động: <b>#{item.inactive}</b>

