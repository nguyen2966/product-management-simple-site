extends ../../layouts/default.pug
include ../../mixins/alert.pug


block main 
  +alert-error(5000)
  +alert-success(5000)
  h1(class="mb-4") Cập nhật tài khoản

  form(
    action=`${prefixAdmin}/accounts/edit/${record.id}?_method=PATCH`
    id="form-edit-account"
    method="POST"
    enctype="multipart/form-data"
  )
    div(class="form-group")
      label(for="fullName") Họ tên *
      input(
        type="text"
        class="form-control"
        id="fullName"
        name="fullName"
        value=record.fullName
      )
    div(class="form-group")
      label(for="email") Email *
      input(
        class="form-control"
        id="email"
        name="email"
        value=record.email
      )
    div(class="form-group")
      label(for="password") Mật khẩu *
      input(
        class="form-control"
        id="password"
        type="password"
        name="password"
      )
    div(class="form-group")
      label(for="phone") Số điện thoại *
      input(
        class="form-control"
        id="phone"
        name="phone"
        value=record.phone
      )
    div(
      class="form-group"
      upload-image)
      label(for="avatar") Avatar
      input(
        type="file"
        class="form-control-file"
        id="avatar"
        name="avatar"
        accept="image/*"
        upload-image-input
      )
      div(image-preview)
        img(
          src=record.avatar
          upload-image-preview
        )
    div(class="form-group")
      label(for="role_id") Phân quyền 
      select(name="role_id" id="role_id" class="form-control")
        option(disabled) --Chọn--
        each role in roles 
          option(value=role._id
                 selected=(role._id == record.role_id ? true:false)) #{role.title}
    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusActive"
        name="status"
        value="active"
        checked=(record.status == 'active'? true:false)
      )
      label(form="statusActive" class="form-check-label") Hoạt động
    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusInactive"
        name="status"
        value="inactive"
        checked=(record.status == 'inactive'? true:false)
      )
      label(form="statusActive" class="form-check-label") Dừng hoạt động
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Cập nhật 
  script(src="/admin/js/script.js")